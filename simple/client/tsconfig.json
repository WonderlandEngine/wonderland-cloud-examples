{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "declaration": true,
    "allowJs": false,
    "newLine": "LF",
    "strict": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./js/**/*.js", "./js/**/*.ts"]
}

